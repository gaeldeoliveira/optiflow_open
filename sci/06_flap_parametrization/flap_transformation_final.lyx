\begin_inset Formula 
\[
f_{\left(x\right)}=\begin{cases}
c & \quad,\quad x<x_{h}-\delta\\
2\delta mg_{\left(\eta_{\left(x\right)}\right)}+c & \quad,\quad x_{h}-\delta\leq x<x_{h}+\delta\\
c+m\left(x-x_{hinge}\right) & \quad,\quad x_{h}+\delta\leq x
\end{cases}
\]

\end_inset


\end_layout

